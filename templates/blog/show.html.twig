{% extends 'base.html.twig' %}

{% block body %}
    <article>
            <h2>{{ post.createdBy }}</h2>
            <div class="metadata">Posté le {{ post.createdAt | date("d/m/Y") }} à {{ post.createdAt | date("H:i") }} dans la catégorie Bord de mer</div>
            <div class="content">
                <img src="{{ post.image }}" alt="">
                <h3>{{ post.title }}<h3>
                <p>{{ post.content | raw }}</p>
            </div>
            <a href="" class="btn btn-primary">J'aime</a>
            <a href="" class="btn btn-primary">Commenter</a>
            <a href="{{ path('blog_edit', {id: post.id})}}" class="btn btn-primary">Modifier</a>
    </article>
{% endblock %}