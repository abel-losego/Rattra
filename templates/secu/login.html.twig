{% extends 'base.html.twig'%}

{% block body %}
    <h1>Connexion</h1>
    
    <form action=" {{ path('secu_login') }}" method="post">
        <div class="form-group">
            <input placeholder="Entrer votre adresse email" required name="_username" type="text" class="form-control">
        </div>
        <div class="form-group">
            <input placeholder="Entrer votre mot de passe" required name="_password" type="password" class="form-control">
        </div>
        <div class="form-group">
            <button type="submit" class"btn btn-success">Se connecter</button>
        </div>
    </form>

{% endblock %}
